# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL for Drizzle migrations
# Get this from Supabase: Settings → Database → Connection String (URI)
# Use the "Session pooler" connection string for better performance
# Region: eu-west-1
DATABASE_URL=postgresql://postgres.your-project-id:[YOUR-PASSWORD]@aws-0-eu-west-1.pooler.supabase.com:6543/postgres

# Airtable - DeBloq Base (Read for dashboard)
AIRTABLE_API_KEY=your-airtable-api-key
AIRTABLE_BASE_ID_DEBLOQ=your-debloq-base-id

# Airtable - Reports Base (Write via n8n)
AIRTABLE_BASE_ID_REPORTS=your-reports-base-id

# n8n Webhook
N8N_WEBHOOK_URL=https://n8n.example.com/webhook/complete-work-order
N8N_WEBHOOK_SECRET=your-webhook-secret

# AWS S3 (Day 2+)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=zite-technician-photos

# Application
NEXT_PUBLIC_APP_URL=https://reports.bloqit.io
